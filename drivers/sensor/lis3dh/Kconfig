#
# SPDX-License-Identifier: Apache-2.0
#

menuconfig LIS3DH
	bool "LIS3DH Three Axis Accelerometer"
	depends on I2C
	help
	  Enable SPI/I2C-based driver for LIS2DH, LIS3DH, LSM303DLHC,
	  LIS2DH12, LSM303AGR triaxial accelerometer sensors.

if LIS3DH
	  
choice LIS3DH_TRIGGER_MODE
	prompt "Trigger mode"
	help
	  Specify the type of triggering to be used by the driver.

config LIS3DH_TRIGGER_NONE
	bool "No trigger"

config LIS3DH_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select LIS3DH_TRIGGER

config LIS3DH_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select LIS3DH_TRIGGER

endchoice

config LIS3DH_NAME
	string "Driver name"
	default "LIS3DH"
	help
	  Device name with which the LIS3DH sensor is identified.

config LIS3DH_I2C_ADDR
	hex "I2C address for LIS3DH"
	default 0x18
	help
	  I2C address of the LIS3DH sensor.

config LIS3DH_I2C_MASTER_DEV_NAME
	string "I2C master where LIS3DH is connected"
	default "I2C_2"
	help
	  Specify the device name of the I2C master device to which the
	  LIS3DH chip is connected.

config LIS3DH_TRIGGER
	bool

config LIS3DH_THREAD_PRIORITY
	int "Thread priority"
	depends on LIS3DH_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config LIS3DH_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on LIS3DH_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

choice
	prompt "Acceleration measurement range"
	default LIS3DH_ACCEL_RANGE_RUNTIME
	help
	  Initial measurement full scale range for acceleration values.

config LIS3DH_ACCEL_RANGE_RUNTIME
	bool "Set at runtime"

config LIS3DH_ACCEL_RANGE_2G
	bool "+/-2g"

config LIS3DH_ACCEL_RANGE_4G
	bool "+/-4g"

config LIS3DH_ACCEL_RANGE_8G
	bool "+/-8g"

config LIS3DH_ACCEL_RANGE_16G
	bool "+/-16g"

endchoice

choice
	prompt "Power mode"
	default LIS3DH_POWER_MODE_NORMAL
	help
	  Choose between normal or low power operation mode for chip at init.

config LIS3DH_POWER_MODE_NORMAL
	bool "normal"

config LIS3DH_POWER_MODE_LOW
	bool "low"

endchoice

choice
	prompt "Output data rate frequency"
	default LIS3DH_ODR_RUNTIME
	help
	  Initial data rate frequency of acceleration data at initialization.
	  Supported values:
	  1Hz, 10Hz, 25Hz, 50Hz, 100Hz, 200Hz, 400Hz in all power modes
	  1620Hz, 5376Hz in low power mode only
	  1344Hz in normal power mode

config LIS3DH_ODR_RUNTIME
	bool "Set at runtime"

config LIS3DH_ODR_1
	bool "1Hz"

config LIS3DH_ODR_2
	bool "10Hz"

config LIS3DH_ODR_3
	bool "25Hz"

config LIS3DH_ODR_4
	bool "50Hz"

config LIS3DH_ODR_5
	bool "100Hz"

config LIS3DH_ODR_6
	bool "200Hz"

config LIS3DH_ODR_7
	bool "400Hz"

config LIS3DH_ODR_8
	bool "1.6KHz"
	depends on LIS3DH_POWER_MODE_LOW

config LIS3DH_ODR_9_NORMAL
	bool "1.25KHz"
	depends on LIS3DH_POWER_MODE_NORMAL

config LIS3DH_ODR_9_LOW
	bool "5KHz"
	depends on LIS3DH_POWER_MODE_LOW

endchoice

endif # LIS3DH
